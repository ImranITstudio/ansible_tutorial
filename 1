---

- hosts: all
  become: true
  tasks:
  - name: update repository index
    apt:
      update_cache: yes
    when: ansible_distribution == "Ubuntu"    
  - name: install apache2 package
    apt:
      name: apache2
      state: latest  
    when: ansible_distribution == "Ubuntu"    
  - name: install apache2 support php
    apt: 
      name: libapache2-mod-php
      state: latest
        # Just for one distribution  
        # when: ansible_distribtution == "Ubuntu"
        # If we want to declare for multiple distribution for same kernel 
    when: ansible_distribution in ["Debian","Ubuntu"] 

